{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist/preload",
    "rootDir": "./src"
  },
  "include": [
    "src/preload/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "src/main/**/*"
  ]
}